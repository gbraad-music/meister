{
  "name": "meister",
  "author": "Gerard Braad <me@gbraad.nl>",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Regroove Meister - MIDI Controller Suite for Live/DJ Performance",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "cap:init": "npx cap init",
    "cap:add:android": "npx cap add android",
    "cap:sync": "npx cap sync",
    "cap:open:android": "npx cap open android",
    "build:android": "npx cap sync && npx cap open android"
  },
  "keywords": [
    "midi",
    "controller",
    "dj",
    "akai-fire",
    "sequencer"
  ],
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "@capacitor/cli": "^5.5.0"
  },
  "dependencies": {
    "@capacitor/core": "^5.5.0",
    "@capacitor/android": "^5.5.0"
  },
  "build": {
    "appId": "nl.gbraad.meister",
    "productName": "Regroove Meister",
    "compression": "normal",
    "files": [
      "main.js",
      "index.html",
      "*.js",
      "*.css",
      "adapters/**/*",
      "components/**/*",
      "utils/**/*",
      "manifest.json",
      "icon.svg",
      "*.png",
      "!node_modules/**/*",
      "node_modules/electron/**/*"
    ],
    "extraFiles": [],
    "directories": {
      "output": "dist",
      "buildResources": "."
    },
    "linux": {
      "icon": "icon-512x512.png",
      "category": "AudioVideo",
      "target": [
        "AppImage",
        "deb"
      ],
      "synopsis": "MIDI Controller Suite for Live/DJ Performance"
    },
    "win": {
      "icon": "icon-512x512.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "icon": "icon-512x512.png",
      "category": "public.app-category.music",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
