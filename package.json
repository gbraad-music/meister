{
  "name": "meister",
  "author": "Gerard Braad (me@gbraad.nl)",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Regroove Meister - MIDI Controller Suite for Live/DJ Performance",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging"
  },
  "keywords": [
    "midi",
    "controller",
    "dj",
    "akai-fire",
    "sequencer"
  ],
  "devDependencies": {
    "electron": "^28.0.0"
  },
  "build": {
    "appId": "nl.gbraad.meister",
    "productName": "Regroove Meister",
    "files": [
      "main.js",
      "index.html",
      "*.js",
      "*.css",
      "adapters/**/*",
      "components/**/*",
      "utils/**/*",
      "manifest.json",
      "icon.svg",
      "*.png"
    ],
    "extraFiles": [],
    "directories": {
      "output": "dist"
    },
    "linux": {
      "icon": "icon-512x512.png",
      "category": "AudioVideo"
    },
    "win": {
      "icon": "icon-512x512.png"
    },
    "mac": {
      "icon": "icon-512x512.png"
    }
  }
}
